<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="231dp" app:srcCompat="@drawable/sample_backdrop" android:id="@+id/ivBackdrop"/>

    <ImageView
            android:layout_width="162dp"
            android:layout_marginTop="-50dp"
            android:layout_marginLeft="15dp"
            android:layout_height="243dp" app:srcCompat="@drawable/sample_image" android:id="@+id/ivMoviePoster"/>


    <TextView
            android:text="TextView"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="-180dp"
            android:layout_width="168dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" android:id="@+id/tvMovieTitle"/>

    <TextView
            android:text="TextView"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="205dp"
            android:layout_width="159dp"
            android:layout_height="wrap_content" android:id="@+id/tvVoteAverage"/>

    <ImageView
            android:layout_width="196dp"
            android:layout_marginTop="-21dp"
            android:layout_marginLeft="93dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_star_black_24dp"
            android:id="@+id/imageView3" tools:ignore="VectorDrawableCompat"/>


    <TextView
            android:text="TextView"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="10dp"
            android:layout_width="168dp"
            android:layout_height="wrap_content" android:id="@+id/tvVoteCount"/>

    <ImageView
            android:layout_width="196dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_supervisor_account_black_24dp"
            android:layout_marginTop="-21dp"
            android:layout_marginLeft="93dp"
            android:id="@+id/imageView4" tools:ignore="VectorDrawableCompat"/>
    <TextView
            android:text="TextView"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="10dp"
            android:layout_width="168dp"
            android:layout_height="wrap_content" android:id="@+id/tvReleaseDate"/>

    <ImageView
            android:layout_width="196dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_insert_invitation_black_24dp"
            android:layout_marginTop="-21dp"
            android:layout_marginLeft="93dp"
            android:id="@+id/imageView5" tools:ignore="VectorDrawableCompat"/>

    <TextView
            android:text="TextView"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="10dp"
            android:layout_width="168dp"
            android:layout_height="wrap_content" android:id="@+id/tvOriginalLanguage"/>

    <ImageView
            android:layout_width="196dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_language_black_24dp"
            android:layout_marginTop="-21dp"
            android:layout_marginLeft="93dp"
            android:id="@+id/imageView6" tools:ignore="VectorDrawableCompat"/>

    <TextView
            android:text="Overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textStyle="bold" android:layout_marginTop="30dp" android:padding="5dp" android:textSize="20dp"/>

    <TextView
            android:text="Description"
            android:layout_width="match_parent"
            android:layout_height="157dp" android:id="@+id/tvDescription"
            android:padding="20dp"
            android:layout_marginTop="10dp"/>


</LinearLayout>